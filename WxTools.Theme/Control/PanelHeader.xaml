<UserControl x:Class="WxTools.Theme.Control.PanelHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Border MinHeight="100" MinWidth="180" BorderThickness="1" Background="White" BorderBrush="#FFD3D0D6" CornerRadius="10">
        <StackPanel>
            <TextBlock Text="功能" Foreground="Black" Background="#FFE5EAE5" Padding="10,5" FontSize="15">
                <TextBlock.Clip>
                    <RectangleGeometry RadiusX="10" RadiusY="10" Rect="-1,0,180,50"></RectangleGeometry>
                </TextBlock.Clip>
            </TextBlock>
            <ContentPresenter SnapsToDevicePixels="True"></ContentPresenter>
        </StackPanel>
    </Border>
</UserControl>
